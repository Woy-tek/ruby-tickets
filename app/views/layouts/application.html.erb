<!DOCTYPE html>
<html>
  <head>
    <title>Bilety</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class ="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %><p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <p class="navbar-text pull-right">
      <% if user_signed_in? %>Logged in as <strong><%= current_user.email %></strong>.
          <%= link_to 'Edytuj profil', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Wyloguj się", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
        <% else %>
          <%= link_to "Zarejestruj się", new_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Zaloguj się", new_user_session_path, :class => 'navbar-link' %>
      <% end %>
    </p>

    <%= yield %>
  </body>
</html>
