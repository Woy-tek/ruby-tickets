<h1>Nowe wydarzenie</h1>

<%= form_for @event, :url => { :action => "create" } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_expplanation">
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%=message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <label>Nazwa artysty</label>
    <%= f.text_field :artist %>
    <label>Opis wydarzenia</label>
    <%= f.text_field :description %>
    <label>Cena minimalna</label>
    <%= f.text_field :price_low %>
    <label>Cena maksymalna</label>
    <%= f.text_field :price_high %>
    <label>Data</label>
    <%= f.date_select :event_date %> <br>
    <%= f.submit "Submit" %>
<% end %>



<%= link_to 'Back', events_path %>